<!--------------------------------------------------------------------------------------------------------


    
    CARDIO INPUTS



--------------------------------------------------------------------------------------------------------->
       
    
                
                            <div>
    
                                <div class="container mx-auto flex flex-row justify-center">


                                    <form action="/dashboard/createCardioEntry" method="POST" class="flex flex-row">

    
                                    <input type="date" placeholder="Date" name="date" pattern="\d{4}-\d{2}-\d{2}" class="input input-bordered w-full max-w-xs mr-4" required/>

                                    <input type="text" placeholder="Location" name="location" class="input input-bordered w-full max-w-xs mr-4" required/>

                                    <select name="sport" class="select w-fit max-w-xs input-bordered mr-4" required>
                                        <option disabled selected>Sport</option>
                                        <option>Bike</option>
                                        <option>Run</option>
                                    </select>

                                    <input type="text" placeholder="Time 00:00:00" name="time" class="input input-bordered w-full max-w-xs mr-4" required/>

                                    <input type="number" step="0.1" min="0" placeholder="Distance" name="distance" class="input input-bordered w-full max-w-xs mr-4" required/>

                                    <select name="unit" class="select w-fit max-w-xs input-bordered mr-4" required>
                                        <option disabled selected>Unit</option>
                                        <option>mi</option>
                                        <option>km</option>
                                    </select>
                                    <button class="btn btn-active btn-primary btn-md">Button</button>


                                    </form>   

    
                                </div>

                                <div class="divider"></div>
    
               
                        
<!--------------------------------------------------------------------------------------------------------


    
    CARDIO TABLE



--------------------------------------------------------------------------------------------------------->
                            
                            <div> 
                                    
                                    <div class="overflow-x-auto rounded-xl">
                                        <table class="table table-zebra w-full min-h-20rem table-auto border-8 rounded-xl "> 
                                        <!-- head -->
                                        <thead>
                                            <tr>
                                            <th>Date</th>
                                            <th>Location</th>
                                            <th>Sport</th>
                                            <th>Time</th>
                                            <th>Distance</th>
                                            </tr>
                                        </thead>
                                        <tbody class="cardio-list">

                                            <% cardioEntries.forEach( entry => { %>
                                            <tr class='cardioItem' data-id='<%= entry._id %>'>
                                            <td class="cardio-list-item-date"><%= entry.date %></td>
                                            <td class="cardio-list-item-location"><%= entry.location %></td>
                                            <td class="cardio-list-item-sport"><%= entry.sport %></td>
                                            <td class="cardio-list-item-time"><%= entry.time %></td>
                                            <td class="cardio-list-item-distance"><%= entry.distance %><%= entry.unit %></td>
                                            </tr>
                                            <% }) %>

                                        </tbody>
                                        </table>
                                    </div>
