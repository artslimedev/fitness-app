                                        <option>Tricep</option>
                                        <option>Traps</option>
                                        <option>Lower Back</option>
                                        <option>Quads</option>
                                        <option>Hamstrings</option>
                                        <option>Calves</option>
                                    </select>

                                    <input type="number" step="0.1" min="0" placeholder="Weight" name="weight" class="input input-bordered w-full max-w-xs mr-4" required/>

                                    <select name="unit" class="select w-fit max-w-xs input-bordered mr-4" required>
                                        <option disabled selected>Unit</option>
                                        <option>lbs</option>
                                        <option>kg</option>
